{{!-- post title, post content, post by, post date --}}
<div class="new-post container-lg">
    <form class="form new-post-form">
        <div class="form-group">
            <label for="post-title">New blog title: </label>
            <input class="form-input" type="text" id="post_name">
        </div>
        <div class="form-group">
            <label for="new-post-body">What are you thinking? </label>
            <input class="form-input text-wrap" type="text" id="content" />
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">submit</button>
        </div>
    </form>
</div>

{{#if posts }}
{{#each posts as |post|}}
{{> postCard}}
{{/each}}
{{else}}
<div>
    No Posts yet...
</div>
{{/if}}

<script src="/js/addPost.js"></script>
